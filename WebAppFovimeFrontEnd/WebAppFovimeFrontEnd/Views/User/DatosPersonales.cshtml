
<section class="section-padding">
    <div class="container">
        <div class="row col-md-8 col-lg-8 col-12 mx-auto">

            <div class="">
                <h3 class="mb-4 pb-2">Actualización de mis datos personales</h3>
            </div>

            <div class="custom-block custom-block-topics-listing shadow-lg mb-5 section-bg border">
                <div>
                    <div class="row">

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-control" style="font-weight:bold;border-radius:10px" title="No editable">
                                <label>Socio:</label>
                                <label>@ViewBag.ClientInfo.c_t_cliente</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-control" style="font-weight:bold;border-radius:10px" title="No editable">
                                <label>Grado:</label>
                                <label>@ViewBag.ClientInfo.c_t_grado</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-floating">
                                <input type="text" name="txtTelefono" id="txtTelefono" class="form-control" placeholder="Teléfono celular" required="" value="@ViewBag.ClientInfo.c_t_telefonoc">

                                <label for="floatingInput">Teléfono celular</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-floating">
                                <input type="email" name="txtEmail" id="txtEmail" class="form-control" placeholder="Correo electrónico" required="" value="@ViewBag.ClientInfo.c_t_email">

                                <label for="floatingInput">Correo electrónico</label>
                            </div>
                        </div>

                        <div class="col-lg-12 col-12 p-2">

                            <div class="form-floating">
                                <textarea class="form-control" id="txtDireccion" name="txtDireccion" placeholder="Dirección">@ViewBag.ClientInfo.c_t_direccion</textarea>

                                <label for="floatingTextarea">Dirección</label>
                            </div>
                        </div>

                        <div class="col-lg-4 col-12 ms-auto pt-2">
                            <button class="form-control btn-success border" onclick="UpdateClientInfo()" style="width:170px;border-radius:15px">Guardar cambios</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/js/client.js"></script>
}

