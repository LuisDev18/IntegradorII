<section class="section-padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center">
                <h3 class="mb-3">Simulaciones de crédito</h3>
            </div>


            <div class="col-lg-8 col-12 mt-3 mx-auto">
                <div class="custom-block custom-block-topics-listing bg-white shadow-lg mb-5">
                    <div class="row">

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-control" style="font-weight:bold;border-radius:10px" title="No editable">
                                <label>Socio:</label>
                                <label>@ViewBag.ClientInfo.c_t_cliente</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-control" style="font-weight:bold;border-radius:10px" title="No editable">
                                <label>Grado:</label>
                                <label>@ViewBag.ClientInfo.c_t_grado</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-floating">
                                <input type="number" name="txtMonto" id="txtMonto" class="form-control" placeholder="Monto" required="" value="0.00">

                                <label for="floatingInput">Monto a solicitar</label>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-12 p-2">
                            <div class="form-floating">
                                <input type="number" name="txtPlazo" id="txtPlazo" class="form-control" placeholder="Plazo (en dias?meses?)" required="" value="0">

                                <label for="floatingInput">Plazo (en dias?meses?)</label>
                            </div>
                        </div>

                        <div id="pnl-btn-1" class="col-lg-4 col-12 ms-auto pt-2">
                            <button class="form-control btn-success border" onclick="PerformSimulation()" style="width:220px;border-radius:15px">Realizar simulación</button>
                        </div>
                        <div id="pnl-btn-2" class="w-100 row p-0 m-0" style="text-align:center;display:none">
                            <div class="col-lg-6 col-md-6 col-12 p-2">
                                <button id="btnSavesolicitud"  class="btn-primary btn border" onclick="SolicitarCredito()" style="width:220px;border-radius:15px;height:38px">Solicitar crédito</button>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12 p-2">
                                <button class="btn-warning btn border" onclick="NuevaSolicitud()" style="width:220px;border-radius:15px;height:38px">Nueva solicitud</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>


    <div id="panel_solicitudes_detalle" class="custom-block custom-block-topics-listing bg-white shadow-lg mb-2" style="display:none;max-height:420px !important;overflow-y: scroll;font-size:12px">
        <h6 class="border m-0 p-2 bg-light " style="font-size:17px;font-weight:bold">Detalle de la simulación de crédito</h6>
        <div class="p-2 border">

            <table id="tb_solicitudes_detalle" class="display w-100">
                <thead>
                    <tr>
                        <th>N. cuota</th>
                        <th>F. vencimiento</th>
                        <th>Saldo inicial</th>
                        <th>Capital</th>
                        <th>Interes</th>
                        <th>Seguro</th>
                        <th>Comisión</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>


</section>
@section Scripts{
    <script src="~/js/simulacion.js"></script>
}
